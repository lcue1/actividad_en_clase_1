<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layouts">
        <item name="android:background">@color/app_bg</item>
    </style>
    <!-- Text -->
    <style name="text_normal">
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    <style name="text_title" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Buttons -->
    <style name="btn_primary">
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:backgroundTint">@color/bg_btn</item>
        <item name="android:textColor">@color/text_color_1</item>
    </style>
    <style name="btn_all_students" parent="btn_primary">
        <item name="android:backgroundTint">@color/blue</item>
    </style>
    <style name="btn_pased" parent="btn_primary">
        <item name="android:backgroundTint">@color/green</item>
    </style>
    <style name="btn_failed" parent="btn_primary">
        <item name="android:backgroundTint">@color/red</item>
    </style>
    <style name="btn_10" parent="btn_primary">
        <item name="android:backgroundTint">@color/gold</item>
    </style>


    <!-- TextFields -->

    <style name="edit_text_primary">
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/text_color_2</item>
    </style>


</resources>